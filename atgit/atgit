function atgit() {
    local GIT_ROOT=$(git rev-parse --show-toplevel 2>/dev/null)
    local IN_GIT=$?
    local ARGS=$@

    if [[ $IN_GIT -ne 0 ]]; then
        eval $ARGS
    else
        local CURR_DIR=$PWD
        local OLDPWD_BCK=$OLDPWD

        cd "$GIT_ROOT" && eval $ARGS

        cd "$CURR_DIR"
        OLDPWD=$OLDPWD_BCK
    fi
}
